			parseRSS('http://feeds.feedburner.com/bootswatch', function(d){
				var h ='<strong>Recent updates:</strong> ';
				for (var i = 0; i < 3; i++){
					h = h + '<a href="' + d.entries[i].link + '" onclick="pageTracker._link(this.href); return false;">' + d.entries[i].title + '...</a>&nbsp;&nbsp;';
